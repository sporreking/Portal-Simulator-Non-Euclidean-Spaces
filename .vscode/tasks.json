{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "cmake -G \"MinGW Makefiles\" . && mingw32-make"
            },
            "linux": {
                "command": "cmake . && make",
            },
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./build/PortalSimulator"
        },
        {
            "label": "build & run",
            "type": "shell",
            "windows": {
                "command": "cmake -G \"MinGW Makefiles\" . && mingw32-make && \"./build/PortalSimulator.exe\""
            },
            "linux": {
                "command": "cmake . && make && ./build/PortalSimulator",
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}